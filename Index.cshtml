@model IEnumerable<OrderApplicationPage.Models.Order>
<div class="container"></div>
<div class="row">
    <div class="col-md-6">
        <h2 class="text-primary">Order List</h2>
    </div>
    <div class="col-md-6">
        <a asp-action="Create" asp-controller="Order" class="btn btn-primary">
            Create Order
        </a>
    </div> <br/> <br/>

    @if (Model.Count() > 0)
    {
        <table class=" table table-border table table- striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        Order Number
                    </th>
                    <th>
                        First Name
                    </th>

                    <th>
                        Address
                    </th>
                    <th>
                        ZipCode
                    </th>
                    <th>
                        CountryCode
                    </th>

                    <th>


                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%">
                       
                        @obj.Number
                    </td>
                    <td width="20%">

                        @obj.OrderNumber
                    </td>

                    <td width="30%">
                        @obj.ShipToFirstName
                    </td>

                    <td width="40%">
                        @obj.ShipToAddress1
                    </td>

                    <td width="20%">
                        @obj.ShipToZipCode
                    </td>

                    <td width="20%">
                        @obj.ShipToCountryCode
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                        <a asp-controller="Order"  asp-route-Id="@obj.Number"asp-action="Edit" class="btn btn-primary">Edit</a>
                        <a asp-controller="Order" asp-route-Id="@obj.Number" asp-action="Delete" class="btn btn-danger">Delete</a>

                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No Order exists</p>
    }

</div>
